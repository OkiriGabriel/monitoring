{
    "dashboard": {
      "title": "Riders API Monitoring",
      "tags": ["riders", "api", "monitoring"],
      "timezone": "browser",
      "panels": [
        {
          "id": 1,
          "title": "API Uptime",
          "type": "stat",
          "targets": [
            {
              "expr": "avg(probe_success{job=\"blackbox\"}) * 100",
              "refId": "A"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "thresholds": {
                "steps": [
                  {"value": 0, "color": "red"},
                  {"value": 95, "color": "yellow"},
                  {"value": 99, "color": "green"}
                ]
              }
            }
          },
          "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
        },
        {
          "id": 2,
          "title": "Average Response Time",
          "type": "stat",
          "targets": [
            {
              "expr": "avg(probe_http_duration_seconds{job=\"blackbox\"}) * 1000",
              "refId": "A"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "ms",
              "thresholds": {
                "steps": [
                  {"value": 0, "color": "green"},
                  {"value": 500, "color": "yellow"},
                  {"value": 1000, "color": "red"}
                ]
              }
            }
          },
          "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
        },
        {
          "id": 3,
          "title": "Request Rate",
          "type": "stat",
          "targets": [
            {
              "expr": "rate(probe_http_duration_seconds_count{job=\"blackbox\"}[5m])",
              "refId": "A"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "reqps"
            }
          },
          "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
        },
        {
          "id": 4,
          "title": "Error Rate",
          "type": "stat",
          "targets": [
            {
              "expr": "(1 - avg(probe_success{job=\"blackbox\"})) * 100",
              "refId": "A"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "thresholds": {
                "steps": [
                  {"value": 0, "color": "green"},
                  {"value": 1, "color": "yellow"},
                  {"value": 5, "color": "red"}
                ]
              }
            }
          },
          "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
        },
        {
          "id": 5,
          "title": "Response Time Over Time",
          "type": "timeseries",
          "targets": [
            {
              "expr": "probe_http_duration_seconds{job=\"blackbox\"} * 1000",
              "legendFormat": "{{instance}}"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "ms"
            }
          },
          "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
        },
        {
          "id": 6,
          "title": "Success Rate Over Time",
          "type": "timeseries",
          "targets": [
            {
              "expr": "probe_success{job=\"blackbox\"}",
              "legendFormat": "{{instance}}"
            }
          ],
          "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
        },
        {
          "id": 7,
          "title": "API Endpoints Status",
          "type": "table",
          "targets": [
            {
              "expr": "probe_success{job=\"blackbox\"}",
              "format": "table",
              "instant": true
            }
          ],
          "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
        },
        {
          "id": 8,
          "title": "SSL Certificate Expiry (Days)",
          "type": "gauge",
          "targets": [
            {
              "expr": "(probe_ssl_earliest_cert_expiry{job=\"blackbox\"} - time()) / 86400",
              "legendFormat": "{{instance}}"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "days",
              "thresholds": {
                "steps": [
                  {"value": 0, "color": "red"},
                  {"value": 30, "color": "yellow"},
                  {"value": 60, "color": "green"}
                ]
              }
            }
          },
          "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
        }
      ]
    }
  }
  